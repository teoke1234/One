FROM maven:3.9.4-eclipse-temurin-11-alpine AS build
COPY src home/OneFrameWork/src
COPY pom.xml home/OneFrameWork/pom.xml
WORKDIR home/OneFrameWork
RUN mvn clean test -Dgroups=web -Dselenide.browser=chrome

FROM selenium/standalone-chrome
COPY --from=build /app/target/*.jar /app/app.jar
EXPOSE 4444
CMD ["java", "-jar", "/app/app.jar"]

